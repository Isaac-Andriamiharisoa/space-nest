<div class="editprofpg">
  <div class="motedpro">
    <h2>Edit Profile<% resource_name.to_s.humanize %></h2>
  </div>


  <div class="editprofilepage">

    <div class="cancelacc">
      <%# <img src="https://images.pexels.com/photos/6705878/pexels-photo-6705878.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="profile-picture" height="200" width="200" class="profimg"> %>
      <%= image_tag "logo.png", alt: "text", width: "200", height: "200", class: "profimg" %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </div>

    <div class="squareradius">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :current_password,
                  hint: "leave it blank if you don't want to change it",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :password,
                  hint: "Change password here",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "button" %>
        <div class="back">
          <%= link_to "Back", :back %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
