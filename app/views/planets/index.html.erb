<div class="search-container row">
  <div class="page-title col-5">
    <h1>Gallery</h1>
    <h6>Help us support lorem lorem Help us support</h6>
  </div>

  <div class="search-bar col-5">
    <%= form_with(url: planets_path, method: "get") do |f| %>
      <%= f.button type:"submit", class: "button-search" do%>
        <i class="fa fa-search"></i>
      <% end %>
      <%= f.text_field :search, placeholder: "Search", class: "search-field" %>
    <% end %>
  </div>

</div>

<div class="card-container">
  <% @planets.each do |planet| %>
    <div class="card">
      <%= link_to planet_path(planet), class: "card-link" do %>
        <% if planet.photo.attached? %>
          <%= cl_image_tag planet.photo.key, alt: "A planet", class: "card-img"%>
        <% else %>
          <%= image_tag "logo-color.png", alt: "A planet", class: "card-img" %>
        <% end %>
        <h3><%= planet.name %></h3>
        <p><%= planet.details %></p>
        <p><%= planet.price %>$ per night</p>
        <%= link_to "Learn more", planet_path(planet), class: "button button-blue card-button"  %>
      <% end %>
    </div>
  <% end %>
</div>
