<h1>Planets#index</h1>
<p>Find me in app/views/planets/index.html.erb</p>

<%= form_with(url: planets_path, method: "get") do |f| %>
  <%= f.text_field :search, placeholder: "Search Products" %>
  <%= f.submit "Search" %>
<% end %>


<div class="container">
  <% @planets.each do |planet| %>
    <%= link_to planet_path(planet) do %>
      <div class="card">
        <h3><%= planet.name %></h3>
        <p><%= planet.details %></p>
        <p><%= planet.price %>$ per night</p>
      </div>
    <% end %>
  <% end %>
</div>
