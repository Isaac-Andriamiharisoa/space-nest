<script>
flatpickr("#fromdate", {
  inline: true,
  dateFormat: "Y-m-d",
  disable: [{
    from: "2023-11-02",
    to: "2023-11-5"
  }],
  onChange: value => {
    const selectedDate = value[0];
    const dateStr = selectedDate.getDate() + '/' + (selectedDate.getMonth() + 1) + '/' + selectedDate.getFullYear();
    document.getElementById('fromDate').value = dateStr;
  }
});

flatpickr("#todate", {
  inline: true,
  onChange: value => {
    const selectedDate = value[0];
    const dateEnd = selectedDate.getDate() + '/' + (selectedDate.getMonth() + 1) + '/' + selectedDate.getFullYear();
    document.getElementById('toDate').value = dateEnd;
  }
});
</script>
